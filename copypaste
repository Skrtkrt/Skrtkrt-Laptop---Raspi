    </div>
    <div style="display:flex; flex-direction:column; align-items:center; margin-bottom:24px;">
        <label for="pwmSlider" style="font-size:1.1rem; font-weight:500; margin-bottom:8px;">Motor Speed (PWM): <span id="pwmValue">32768</span></label>
        <input type="range" id="pwmSlider" min="20000" max="65535" value="32768" style="width:300px;">
    </div>
    <div class="dpad-container">
        <div class="dpad-diagonal-row">
            <button class="dpad-btn" id="northwestBtn">&#8598;</button>
            <button class="dpad-btn" id="forwardBtn">&#8593;</button>
            <button class="dpad-btn" id="northeastBtn">&#8599;</button>
        </div>
        <div class="dpad-middle-row">
            <button class="dpad-btn" id="leftBtn">&#8592;</button>
            <div class="dpad-center"></div>
            <button class="dpad-btn" id="rightBtn">&#8594;</button>
        </div>
        <div class="dpad-diagonal-row">
            <button class="dpad-btn" id="southwestBtn">&#8601;</button>
            <button class="dpad-btn" id="backwardBtn">&#8595;</button>
            <button class="dpad-btn" id="southeastBtn">&#8600;</button>
        </div>
    </div>
    <div style="display:flex; flex-direction:column; align-items:center; margin-top:32px;">
        <h2>Servo Arm Control</h2>
        <label for="servoChannel">Channel:</label>
        <select id="servoChannel">
            <option value="9">9</option>
            <option value="10">10</option>
            <option value="11">11</option>
        </select>
        <label for="servoAngle">Angle: <span id="servoAngleValue">70</span></label>
        <input type="range" id="servoAngle" min="0" max="180" value="70" style="width:200px;">
        <button id="moveServoBtn">Move Servo</button>
    </div>
    <div style="display:flex; flex-direction:column; align-items:center; margin-top:32px;">
        <h2>Automation</h2>
        <button id="automationBtn">Start Automation</button>
        <button id="stopAutomationBtn" style="display:none;">Stop Automation</button>
    </div>
    <div style="display:flex; flex-direction:column; align-items:center; margin-top:32px;">
        <button id="resetBtn">Reset All Channels</button>
    </div>
    <div style="display:flex; flex-direction:column; align-items:center; margin-top:32px;">
        <h3>Status: <span id="statusText">Idle</span></h3>
    </div>
    <script>
        // --- PWM Slider Logic ---
        const pwmSlider = document.getElementById('pwmSlider');
        const pwmValue = document.getElementById('pwmValue');
        pwmSlider.addEventListener('input', () => {
            pwmValue.textContent = pwmSlider.value;
        });
        function getPWM() { return parseInt(pwmSlider.value); }

        // --- Real-Time Button Control ---
        function sendAction(action, pwm) {
            fetch('/manual_control', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ action, pwm })
            });
        }
        function sendStop() {
            sendAction('stop', getPWM());
        }
        function setupRealtimeButton(btnId, action) {
            const btn = document.getElementById(btnId);
            let isPressed = false;
            // Mouse events
            btn.addEventListener('mousedown', () => { isPressed = true; sendAction(action, getPWM()); });
            btn.addEventListener('mouseup', () => { isPressed = false; sendStop(); });
            btn.addEventListener('mouseleave', () => { if (isPressed) { isPressed = false; sendStop(); } });
            // Touch events
            btn.addEventListener('touchstart', (e) => { e.preventDefault(); isPressed = true; sendAction(action, getPWM()); });
            btn.addEventListener('touchend', () => { isPressed = false; sendStop(); });
        }
        setupRealtimeButton('forwardBtn', 'forward');
        setupRealtimeButton('backwardBtn', 'backward');
        setupRealtimeButton('leftBtn', 'left');
        setupRealtimeButton('rightBtn', 'right');
        setupRealtimeButton('northwestBtn', 'northwest');
        setupRealtimeButton('northeastBtn', 'northeast');
        setupRealtimeButton('southwestBtn', 'southwest');
        setupRealtimeButton('southeastBtn', 'southeast');
        // --- Keyboard support ---
        const keyMap = { ArrowUp: 'forward', ArrowDown: 'backward', ArrowLeft: 'left', ArrowRight: 'right',
            wq: 'northwest', we: 'northeast', sq: 'southwest', se: 'southeast' };
        let keyDown = {};
        let combo = '';
        document.addEventListener('keydown', function(e) {
            if (e.repeat) return;
            if (e.key.length === 1) combo += e.key.toLowerCase();
            if (keyMap[e.key]) {
                if (!keyDown[e.key]) {
                    keyDown[e.key] = true;
                    sendAction(keyMap[e.key], getPWM());
                }
            } else if (keyMap[combo]) {
                if (!keyDown[combo]) {
                    keyDown[combo] = true;
                    sendAction(keyMap[combo], getPWM());
                }
            }
            if (e.key === ' ') sendStop();
        });
        document.addEventListener('keyup', function(e) {
            if (keyMap[e.key]) {
                keyDown[e.key] = false;
                sendStop();
            } else if (combo && keyMap[combo]) {
                keyDown[combo] = false;
                sendStop();
                combo = '';
            }
        });
        // Servo Arm Controls
        const servoChannel = document.getElementById('servoChannel');
        const servoAngle = document.getElementById('servoAngle');
        const servoAngleValue = document.getElementById('servoAngleValue');
        const moveServoBtn = document.getElementById('moveServoBtn');
        servoAngle.addEventListener('input', () => {
            servoAngleValue.textContent = servoAngle.value;
        });
        moveServoBtn.addEventListener('click', () => {
            moveServoBtn.disabled = true;
            fetch('/servo_control', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ channel: servoChannel.value, angle: servoAngle.value })
            }).then(r => r.json()).then(res => {
                moveServoBtn.disabled = false;
                if(res.status !== 'success') alert(res.message || 'Error');
            }).catch(() => { moveServoBtn.disabled = false; });
        });
        // Automation Controls
        const automationBtn = document.getElementById('automationBtn');
        const stopAutomationBtn = document.getElementById('stopAutomationBtn');
        automationBtn.addEventListener('click', () => {
            automationBtn.disabled = true;
            fetch('/automation', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ action: 'start' })
            }).then(r => r.json()).then(res => {
                automationBtn.disabled = false;
                if(res.status === 'started') {
                    automationBtn.style.display = 'none';
                    stopAutomationBtn.style.display = '';
                } else if(res.status === 'busy') {
                    alert('System is busy');
                }
            }).catch(() => { automationBtn.disabled = false; });
        });
        stopAutomationBtn.addEventListener('click', () => {
            stopAutomationBtn.disabled = true;
            fetch('/automation', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ action: 'stop' })
            }).then(r => r.json()).then(res => {
                stopAutomationBtn.disabled = false;
                automationBtn.style.display = '';
                stopAutomationBtn.style.display = 'none';
            }).catch(() => { stopAutomationBtn.disabled = false; });
        });
        // Reset Button
        const resetBtn = document.getElementById('resetBtn');
        resetBtn.addEventListener('click', () => {
            resetBtn.disabled = true;
            fetch('/reset_channels', { method: 'POST' })
                .then(r => r.json()).then(res => {
                    resetBtn.disabled = false;
                    if(res.status !== 'success') alert(res.message || 'Error');
                }).catch(() => { resetBtn.disabled = false; });
        });
        // Status Polling
        const statusText = document.getElementById('statusText');
        function pollStatus() {
            fetch('/status').then(r => r.json()).then(res => {
                let state = res.state || 'idle';
                statusText.textContent = state.charAt(0).toUpperCase() + state.slice(1);
                // Disable controls if not idle
                let busy = (state !== 'idle');
                moveServoBtn.disabled = busy;
                automationBtn.disabled = busy;
                resetBtn.disabled = busy;
                if(state === 'automating') {
                    automationBtn.style.display = 'none';
                    stopAutomationBtn.style.display = '';
                } else {
                    automationBtn.style.display = '';
                    stopAutomationBtn.style.display = 'none';
                }
            });
        }
        setInterval(pollStatus, 1000);
        pollStatus();
    </script>
</body>
</html> 
