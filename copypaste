        </div>
    </div>
    <div class="controller">
        <button class="ctrl-btn" onclick="sendAction('forward')">Forward</button>
        <div class="row">
            <button class="ctrl-btn" onclick="sendAction('left')">&#8592; Rotate Counter Clockwise</button>
            <button class="ctrl-btn" onclick="sendAction('right')">Rotate Clockwise &#8594;</button>
        </div>
        <button class="ctrl-btn" onclick="sendAction('backward')">Reverse</button>
        <button class="ctrl-btn" onclick="sendAction('stop')" style="background:#dc3545;">Stop</button>
    </div>
    <script>
        function sendAction(action) {
            fetch('/manual_control', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ action })
            })
            .then(res => res.json())
            .then(data => {
                if (data.status !== 'success') {
                    alert('Error: ' + (data.message || 'Unknown error'));
                }
            })
            .catch(() => alert('Failed to send command.'));
        }
        // Keyboard support
        document.addEventListener('keydown', function(e) {
            if (e.repeat) return;
            if (e.key === 'ArrowUp') sendAction('forward');
            if (e.key === 'ArrowDown') sendAction('backward');
            if (e.key === 'ArrowLeft') sendAction('left');
            if (e.key === 'ArrowRight') sendAction('right');
            if (e.key === ' ') sendAction('stop');
        });
    </script>
