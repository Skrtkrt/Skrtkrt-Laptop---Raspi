    <div id="servo-arm-control" style="margin-top:40px; text-align:center;">
        <h3>Servo Arm Control</h3>
        <label for="servo-channel">Channel:</label>
        <select id="servo-channel">
          <option value="9">9</option>
          <option value="10">10</option>
          <option value="11">11</option>
        </select>
        <label for="servo-angle">Angle:</label>
        <input type="number" id="servo-angle" min="0" max="180" value="90">
        <button onclick="setServoAngle()">Set Angle</button>
        <button onclick="resetAllChannels()">Reset All Channels</button>
        <div id="servo-status" style="margin-top:10px;"></div>
    </div>
    <div id="mode-control" style="margin-top:32px; text-align:center;">
        <h3>PCA9685 Mode</h3>
        <button onclick="setMode('servo')">Servo Mode</button>
        <button onclick="setMode('motor')">Motor Mode</button>
        <div style="margin-top:8px;">Current Mode: <span id="current-mode">...</span></div>
        <div id="mode-status" style="margin-top:8px; color: #007bff;"></div>
    </div>
    <script>
        // --- PWM Slider Logic ---
        const pwmSlider = document.getElementById('pwmSlider');
        const pwmValue = document.getElementById('pwmValue');
        pwmSlider.addEventListener('input', () => {
            pwmValue.textContent = pwmSlider.value;
        });
        function getPWM() { return parseInt(pwmSlider.value); }

        // --- Real-Time Button Control ---
        function sendAction(action, pwm) {
            fetch('/manual_control', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ action, pwm })
            });
        }
        function sendStop() {
            sendAction('stop', getPWM());
        }
        function setupRealtimeButton(btnId, action) {
            const btn = document.getElementById(btnId);
            let isPressed = false;
            // Mouse events
            btn.addEventListener('mousedown', () => { isPressed = true; sendAction(action, getPWM()); });
            btn.addEventListener('mouseup', () => { isPressed = false; sendStop(); });
            btn.addEventListener('mouseleave', () => { if (isPressed) { isPressed = false; sendStop(); } });
            // Touch events
            btn.addEventListener('touchstart', (e) => { e.preventDefault(); isPressed = true; sendAction(action, getPWM()); });
            btn.addEventListener('touchend', () => { isPressed = false; sendStop(); });
        }
        setupRealtimeButton('forwardBtn', 'forward');
        setupRealtimeButton('backwardBtn', 'backward');
        setupRealtimeButton('leftBtn', 'left');
        setupRealtimeButton('rightBtn', 'right');
        setupRealtimeButton('northwestBtn', 'northwest');
        setupRealtimeButton('northeastBtn', 'northeast');
        setupRealtimeButton('southwestBtn', 'southwest');
        setupRealtimeButton('southeastBtn', 'southeast');
        // --- Keyboard support ---
        const keyMap = { ArrowUp: 'forward', ArrowDown: 'backward', ArrowLeft: 'left', ArrowRight: 'right',
            wq: 'northwest', we: 'northeast', sq: 'southwest', se: 'southeast' };
        let keyDown = {};
        let combo = '';
        document.addEventListener('keydown', function(e) {
            if (e.repeat) return;
            if (e.key.length === 1) combo += e.key.toLowerCase();
            if (keyMap[e.key]) {
                if (!keyDown[e.key]) {
                    keyDown[e.key] = true;
                    sendAction(keyMap[e.key], getPWM());
                }
            } else if (keyMap[combo]) {
                if (!keyDown[combo]) {
                    keyDown[combo] = true;
                    sendAction(keyMap[combo], getPWM());
                }
            }
            if (e.key === ' ') sendStop();
        });
        document.addEventListener('keyup', function(e) {
            if (keyMap[e.key]) {
                keyDown[e.key] = false;
                sendStop();
            } else if (combo && keyMap[combo]) {
                keyDown[combo] = false;
                sendStop();
                combo = '';
            }
        });
        function resetAllChannels() {
            fetch('/api/servo/reset', {method: 'POST'})
                .then(res => res.json())
                .then(data => document.getElementById('servo-status').innerText = data.message)
                .catch(err => alert('Error: ' + err));
        }
        function setServoAngle() {
            const channel = document.getElementById('servo-channel').value;
            const angle = document.getElementById('servo-angle').value;
            fetch('/api/servo/set_angle', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ channel: parseInt(channel), angle: parseInt(angle) })
            })
            .then(res => res.json())
            .then(data => {
                if (data.status === 'success') {
                    document.getElementById('servo-status').innerText = `Channel ${data.channel} set to angle ${data.angle}`;
                } else {
                    document.getElementById('servo-status').innerText = data.message || 'Error setting angle';
                }
            })
            .catch(err => {
                document.getElementById('servo-status').innerText = 'Error: ' + err;
            });
        }
        function updateCurrentMode() {
            fetch('/api/pca_mode')
                .then(res => res.json())
                .then(data => {
                    document.getElementById('current-mode').innerText = data.mode;
                });
        }
        function setMode(mode) {
            fetch('/api/pca_mode', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ mode })
            })
            .then(res => res.json())
            .then(data => {
                if (data.status === 'success') {
                    document.getElementById('mode-status').innerText = `Mode set to ${data.mode}`;
                    document.getElementById('current-mode').innerText = data.mode;
                } else {
                    document.getElementById('mode-status').innerText = data.message || 'Error setting mode';
                }
            })
            .catch(err => {
                document.getElementById('mode-status').innerText = 'Error: ' + err;
            });
        }
        // On page load, show current mode
        updateCurrentMode();
    </script>
</body>
</html> 
